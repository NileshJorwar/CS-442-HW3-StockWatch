<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/stockSymbolId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="symbol"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cmpNameId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Company"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/stockSymbolId"
        app:layout_constraintTop_toBottomOf="@+id/stockSymbolId" />

    <TextView
        android:id="@+id/priceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:inputType="numberSigned|numberDecimal"
        android:text="Price"
        app:layout_constraintStart_toEndOf="@+id/stockSymbolId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceChngId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="16dp"
        android:inputType="numberSigned|numberDecimal"
        android:text="Price Change"
        app:layout_constraintStart_toEndOf="@+id/priceId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/changePerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
        android:drawablePadding="5dp"
        android:inputType="numberSigned|numberDecimal"
        android:text="chng perc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priceChngId"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>